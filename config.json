{
    "name": "AlexNet_SpecAugment",
    "n_gpu": 1,

    "arch": {
        "type": "AlexNetGAP",
        "args": {
            "num_classes": 8
        }
    },
    "data_loader": {
        "type": "AccentTrainDataLoader",
        "args":{
            "train_img_path": "../train_img/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "p_augment": 0.6
        }
    },
    "val_data_loader": {
        "type": "AccentDataLoader",
        "args":{
            "img_path": "../dev_img/",
            "batch_size": 128,
            "shuffle": false,
            "num_workers": 4
        }
    },

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 1e-2,
            "momentum": 0.9,
            "weight_decay":5e-4
        }
    },
    "loss": "ce_loss",
    "train_metrics": [
        "accuracy"
    ],
    "val_metrics": [
        "utt_accuracy"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "max",
            "patience": 1,
            "verbose": true
        }
    },
    "trainer": {
        "epochs": 50,


        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max utt_accuracy",
        "early_stop": 15,

        "tensorboard": true
    },
    "trainer_enhance": {
        "mixup": false
    
    }
    
}
