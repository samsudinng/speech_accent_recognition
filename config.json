{
    "name": "Accent_AlexNetGAP_Mixup",
    "n_gpu": 1,

    "arch": {
        "type": "AlexNetGAP",
        "args": {
            "num_classes": 8,
            "in_ch": 3,
            "pretrained": "True"
        }
    },
    "data_loader": {
        "type": "AccentDataLoader",
        "args":{
            "train_img_path": "../train_img/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4
        }
    },
    "val_data_loader": {
        "type": "AccentDataLoader",
        "args":{
            "train_img_path": "../dev_img/",
            "batch_size": 512,
            "shuffle": false,
            "validation_split": 0.0,
            "num_workers": 4,
            "training": false
        }
    },

    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.0005
        }
    },
    "loss": "ce_loss",
    "train_metrics": [
        "accuracy"
    ],
    "val_metrics": [
        "utt_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 50,

        "mixup": true,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max utt_accuracy",
        "early_stop": 5,

        "tensorboard": true
    },
    "trainer_enhance": {
        "mixup": true,
        "mixup_alpha": 0.4
    }
    
}
